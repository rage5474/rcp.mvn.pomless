<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="io.rage5474.rcp.example.ui.plugin.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="io.rage5474.rcp.example.ui.plugin.Perspective"
            id="io.rage5474.rcp.example.ui.plugin.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="MyPart"
            class="io.rage5474.rcp.example.ui.plugin.MyPartWrapper"
            id="io.rage5474.rcp.example.ui.plugin.mypart">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="io.rage5474.rcp.example.ui.plugin.mypart">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="example_rcp_product"
         point="org.eclipse.core.runtime.products">
      <product
            application="io.rage5474.rcp.example.ui.plugin.application"
            name="Example RCP Application">
         <property
               name="appName"
               value="Example RCP Application">
         </property>
      </product>
   </extension>
   

</plugin>
